<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <stroke android:width="0.01dp" android:color="#8fff" />
            <padding android:bottom="1dp" android:left="1dp" android:right="0.5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.01dp" android:color="#fff" />
            <padding android:bottom="1dp" android:left="0.5dp" android:right="0.5dp" />
        </shape>
    </item>
</selector>
