<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="vm" type="com.luckmerlin.model.TaskListModel" />
    </data>
    <LinearLayout android:fitsSystemWindows="true" android:orientation="vertical"
        android:background="#33000000" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="@string/transportManager" android:textSize="17sp" android:paddingLeft="10dp"
            android:paddingRight="10dp" android:textColor="@color/textTitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <View android:background="#55ffffff" android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:adapter="@{vm.taskListAdapter}" android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>