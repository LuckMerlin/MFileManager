<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="task" type="com.luckmerlin.task.Task" />
        <variable name="buttonBackground" type="android.graphics.drawable.Drawable" />
        <variable name="buttonText" type="Object" />
        <variable name="taskExecuteTime" type="String" />
        <variable name="statusText" type="Object" />
        <import type="com.luckmerlin.file.util.FileSize"/>
        <import type="com.luckmerlin.task.Task"/>
        <import type="com.luckmerlin.file.util.Time"/>
        <import type="android.view.View"/>
        <import type="com.luckmerlin.databinding.view.Touch"/>
        <import type="com.luckmerlin.file.task.Progress"/>
    </data>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/selector_round_dark_corner_small"
        android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="match_parent" android:minHeight="60dp"
        android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
        android:layout_height="wrap_content" android:gravity="center_vertical">
        <FrameLayout android:layout_width="60dp" android:layout_height="60dp" android:padding="5dp"
            binding:lmBinding="@{Touch.dispatch(Touch.LONG_CLICK|Touch.CLICK,task)}">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                android:src="@drawable/round_corner_task_item"/>
            <TextView android:text="@{FileSize.formatSizeText(task.progress.getProgress(Progress.TYPE_TOTAL))}"
                android:singleLine="true" android:layout_width="wrap_content" android:textColor="@color/textTitle"
                android:textSize="9sp" android:alpha="0.8" android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>

        <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content">
           <LinearLayout android:orientation="horizontal" android:layout_gravity="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
               <TextView android:layout_width="wrap_content" android:layout_gravity="bottom|center_horizontal"
                    android:text="@{task.progress.getProgress(Progress.TYPE_PERCENT)+`%`??``}"
                    android:layout_marginLeft="5dp" android:textColor="#fff" android:textSize="8sp"
                    android:layout_height="wrap_content"/>
                <TextView android:text="@{task.progress.getProgress(Progress.TYPE_SPEED).toString()??``}"
                    android:textSize="8sp" android:textColor="#fff" android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center" android:visibility="@{task.isAnyStatus(Task.EXECUTING)?View.VISIBLE:View.GONE}"
                    android:layout_marginLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
               <TextView android:layout_width="wrap_content" android:text="@{taskExecuteTime}"
                   android:layout_marginLeft="5dp" android:textColor="#fff" android:textSize="8sp"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
            <View android:backgroundColor="@{task.statusColor}" android:layout_width="match_parent"
                android:layout_height="1dp" android:layout_gravity="bottom"/>
            <TextView android:layout_width="wrap_content" binding:lmBinding="@{Touch.textRes(statusText,null,Touch.NONE)}"
                android:layout_gravity="bottom|center_horizontal" android:textColor="#fff" android:textSize="8sp" android:layout_height="wrap_content"/>
        </LinearLayout>

        <FrameLayout android:layout_width="60dp" android:layout_height="60dp" android:padding="5dp"
            binding:lmBinding="@{Touch.dispatch(Touch.LONG_CLICK|Touch.CLICK,task)}">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                android:src="@drawable/round_corner_task_item"/>
            <TextView android:text="@{FileSize.formatSizeText(task.progress.getProgress(Progress.TYPE_DONE))}"
                android:singleLine="true" android:layout_width="wrap_content" android:textColor="@color/textTitle"
                android:textSize="9sp" android:layout_gravity="center" android:alpha="0.8"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
</layout>