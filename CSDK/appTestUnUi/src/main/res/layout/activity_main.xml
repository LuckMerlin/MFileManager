<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/luckmerlin"
    android:layout_height="match_parent">

    <ScrollView
        android:background="@drawable/test_menu_bg"
        android:scrollbars="none"
        android:layout_gravity="right|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:text="好友列表"  style="@style/test_itemStyle"/>
            <TextView android:text="交友名片"  style="@style/test_itemStyle"/>
            <TextView android:text="个人相册"  style="@style/test_itemStyle"/>
            <TextView android:text="发送链接消息"  style="@style/test_itemStyle"/>
            <TextView android:text="网页链接消息"  style="@style/test_itemStyle"/>
            <TextView android:text="创建频道"  style="@style/test_itemStyle"/>
            <TextView android:text="加入频道"  style="@style/test_itemStyle"/>
            <TextView android:text="隐藏聊天器"  style="@style/test_itemStyle"/>
            <TextView android:text="开启聊天器"  style="@style/test_itemStyle"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>